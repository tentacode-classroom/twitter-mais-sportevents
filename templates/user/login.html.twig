{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}

<section class="login-block">
    <div class="container">
      <div class="row">
        <div class="col-md-4 login-sec">
            <h2 class="text-center">Se connecter</h2>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form class="login-form">
                <div class="form-group">
                  <label for="exampleInputEmail1" class="text-uppercase">Nom d'utilisateur</label>
                  <input type="text" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1" class="text-uppercase">Mot de passe</label>
                  <input type="password" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                  <a href="{{ path('registration') }}">
                      <small>Pas encore Inscrit? Inscrivez vous!</small>
                  </a>

                  <button type="submit" class="btn btn-login float-right">Se connecter</button>
                </div>
      
              </form>
          <div class="copy-text">Créée avec le <i class="fa fa-heart"></i></div>
        </div>
        <div class="col-md-8 banner-sec">
          <img class="d-block img-fluid" src="https://metrouk2.files.wordpress.com/2016/06/485360896.jpg?w=748&h=521&crop=1" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <div class="banner-text">
                <h2>Sport</h2>
                <p>"Le sportif rêve son rêve, le champion le vit"</p>
              </div>	
          </div>
        </div>	  
		</div>
	</div>
</div>
</section>
{% endblock %}
