{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block content %}

   <!-- Navigation -->
        {{ include ('layout/menu.html.twig') }}

    <div class="container-fluid gedf-wrapper">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                <img class="card-img-top" src="{{ asset('/uploads/' ~ app.user.image)}}" alt="Card image cap">
                    <div class="card-body">
                        <div class="h5">@{{ app.user.username }}</div>
                        <div class="h7 text-muted">Nom complet : {{ app.user.firstname }} {{app.user.lastname }}</div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="block">
                                    <div class="h6 text-muted">Followers</div>
                                    <div class="h5">{{app.user.followers|length}}</div>
                                </div>
                                <div class="block">
                                    <div class="h6 text-muted">Following</div>
                                    <div class="h5">{{app.user.followings|length}}</div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 gedf-main">

                
                <div class="card gedf-card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Faire une publication </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                             
                                {{ form_row(form.content) }}
                                   <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile">Télécharger image</label>
                                    </div>
                            </div>
                        </div>
                        <div class="btn-toolbar justify-content-between">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">Publier</button>
                            </div>
                            <div class="btn-group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                    <i class="fa fa-globe"></i>
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <!-- Post /////-->

                <!--- \\\\\\\Post-->
                {% for  message in friendMessages %}             
                     {{ include ('message/message.html.twig', {
                         'user': message.user
                     }) }}
                {% endfor %}
        {% endblock %}
