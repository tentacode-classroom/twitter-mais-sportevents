{% extends 'base.html.twig' %}
                 
{% block content %}
   <!-- Navigation -->
        {{ include ('layout/menu.html.twig') }}


<div class="container">
  {% if users|length != 0 %}
      <div class="card">
      <table class="table table-hover shopping-cart-wrap">
      <tbody>
      {% for user in users %}
      <tr>
          <td>
            <figure class="media">
              <div class="img-wrap"><img src="{{ asset('/uploads/' ~ user.image)}}" class="img-thumbnail img-sm"></div>
              <figcaption class="media-body">
                <h6 class="title text-truncate"><a href="{{ path('profile', {'profileId': user.id}) }}">@{{user.username}}</a></h6>
                <dl class="param param-inline small">
                  <dt>Nom: </dt>
                  <dd>{{user.firstname}} {{user.lastname}}</dd>
                </dl>
              </figcaption>
            </figure> 
          </td>
          <td class="text-right"> 
          <a title="" href="{{ path('profile', {'profileId': user.id}) }}" class="btn btn-outline-success" > <i class="fa fa-plus"></i></a> 
          </td>
      </tr>
            {% endfor %}
      </div>
  {% else %}
    <h2>Nous sommes désolés rien ne correspond à votre recherche<h2>
  {% endif %}
{% endblock %}
